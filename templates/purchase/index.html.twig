{% include "base.html.twig" %}

{% block title %}
	Mes commandes
{% endblock %}

{% block body %}
	<h1>Mes commandes</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Num√©ro</th>
				<th>Adresse</th>
				<th>Date de commande</th>
				<th>Produits</th>
				<th>Total</th>
			</tr>
		</thead>
		<tbody>
			{% for p in purchases %}
				<tr>
					<td>{{p.id}}</td>
					<td>{{p.adress}}<br>{{p.postalCode}},
						{{p.city}}</td>
					<td>{{p.purchasedAt.format('d/m/Y')}}</td>
					<td>
						<ul>
							{% for line in p.purchaseLines %}
								<li>{{line.quantity}}x
									{{ line.productName }}
									({{ line.total / 100 }}
									&euro;)</li>
							{% endfor %}

						</ul>
					</td>
					<td>{{p.total / 100}}
						&euro;</td>
				</tr>
			{% endfor %}

		</tbody>

	</table>
{% endblock %}
